<% layout("/layouts/boilerplate") %>
<!-- ✅ Bootstrap 5 CDN -->
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">

</head>
<body class="bg-light">

  <div class="container mt-5">
    <div class="row justify-content-center">
      <div class="col-md-8 col-lg-6">
        <h2 class="mb-4 text-center text-dark fw-semibold">Create Your New Post</h2>

        <form method="POST" action="/listing" novalidate class="needs-validation" class="border p-4 shadow bg-white rounded-4">

          <div class="mb-3">
            <label class="form-label fw-medium">Title</label>
            <input type="text" name="listing[title]" class="form-control" required placeholder="Enter your title">
            <div class="valid-feedback">title looks good</div>
          </div>

          <div class="mb-3">
            <label class="form-label fw-medium">Description</label>
            <textarea name="listing[description]" class="form-control" required placeholder="Write something..." rows="3"></textarea>
             <div class="valid-feedback">description looks good</div>
                      <div class="invalid-feedback"> enter short description </div>
          </div>

          <div class="mb-3">
            <label class="form-label fw-medium">Image URL</label>
            <input type="url" name="listing[image]" class="form-control"  placeholder="Enter your image URL">
          </div>

          <div class="row">
            <div class="col-md-6 mb-3">
              <label class="form-label fw-medium">Price</label>
              <input type="number" name="listing[price]" class="form-control" required placeholder="Price">
                       <div class="invalid-feedback">plz enter valid price</div>
            </div>
            <div class="col-md-6 mb-3">
              <label class="form-label fw-medium">Country</label>
              <input type="text" name="listing[country]" class="form-control" required placeholder="Enter country name">
                       <div class="invalid-feedback">plz enter the country name</div>
            </div>
          </div>

          <div class="mb-3">
            <label class="form-label fw-medium">Location</label>
            <input type="text" name="listing[location]" class="form-control" required placeholder="Enter location">
          </div>

          <!-- Button width reduced using w-50 and centered with mx-auto -->
          <div class="text-center">
            <button type="submit" class="btn text-white fw-semibold w-50" style="background-color: #fe424d;">Submit</button>
          </div>
        </form>
      </div>
    </div>
  </div>

  <!-- ✅ Bootstrap JS (optional) -->
<!-- Bootstrap JS (optional) -->
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>

<!-- ✅ Bootstrap form validation script -->
<script>
(() => {
  'use strict';
  const forms = document.querySelectorAll('.needs-validation');
  Array.from(forms).forEach(form => {
    form.addEventListener('submit', event => {
      if (!form.checkValidity()) {
        event.preventDefault();
        event.stopPropagation();
      }
      form.classList.add('was-validated');
    });
  });
})();
</script>
</body>
</html>



